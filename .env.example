# Soldier Holdings - Political Funding Platform
# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Application Configuration
VITE_APP_NAME=Soldier Holdings
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Political Funding Compliance Platform

# API Configuration (for future backend integration)
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_API_TIMEOUT=30000

# Authentication (for future implementation)
VITE_AUTH_ENABLED=false
VITE_MFA_ENABLED=false

# Monitoring & Error Tracking
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_SENTRY_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_CRYPTO=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# Development Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info

# Production Settings (uncomment for production)
# VITE_DEBUG_MODE=false
# VITE_LOG_LEVEL=error
# VITE_SENTRY_ENVIRONMENT=production

# Banking Integration (future)
VITE_BANK_API_ENDPOINT=https://api.bank.co.za
VITE_BANK_API_KEY=your_bank_api_key

# Blockchain Integration (future)
VITE_BLOCKCHAIN_RPC_URL=https://polygon-rpc.com
VITE_CHAINALYSIS_API_KEY=your_chainalysis_key

# Compliance Configuration
VITE_COMPLIANCE_ANNUAL_LIMIT=15000000
VITE_COMPLIANCE_DISCLOSURE_THRESHOLD=100000
VITE_COMPLIANCE_UPDATE_INTERVAL=3000

# UI Configuration
VITE_THEME=default
VITE_LANGUAGE=en
VITE_CURRENCY=ZAR
